<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopProfile">
        <ImageView
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:background="@drawable/facility_icon"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Facility Name"
            android:layout_marginLeft="10sp"
            android:textSize="@dimen/docText_18"
            android:textStyle="bold"
            android:id="@+id/txtDoctorFacilityName"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:textSize="@dimen/docText_18"
        android:id="@+id/txtDoctorFacilityAddress"
        tools:text="Address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/docText_18"
        android:layout_marginLeft="40sp"
        android:id="@+id/txtDoctorFacilityPhoneNumber"
        tools:text="Phone Number"/>
</LinearLayout>