<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.RegDocProfessionalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_doc"
            android:textSize="@dimen/textSizeTitle_25"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_60"
            android:id="@+id/spnDegree"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/docText_18"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_60"
            android:id="@+id/spnSpeciality"
            android:layout_marginTop="30sp"
            android:textSize="@dimen/docText_18"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_60"
            android:id="@+id/spnFacility"
            android:layout_marginTop="30sp"
            android:textSize="@dimen/docText_18"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <ImageButton
                    android:layout_width="@dimen/arrow_60"
                    android:layout_height="@dimen/arrow_60"
                    android:background="@drawable/arrow_left"
                    android:id="@+id/btnRegisterBack"
                    android:layout_gravity="start|bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end">
                <ImageButton
                    android:layout_width="@dimen/arrow_60"
                    android:layout_height="@dimen/arrow_60"
                    android:background="@drawable/arrow_right"
                    android:id="@+id/btnRegisterNext" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
